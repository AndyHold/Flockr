# Routes

# Home page
GET     /                           controllers.HomeController.index(request: Request)

#Interval routes
POST     /api/internal/resample         controllers.InternalController.resample

# Auth routes
POST    /api/auth/travellers/signup     controllers.AuthController.signup(request: Request)


# Traveller routes
POST    /travellers/:travellerId/passports  controllers.TravellerController.addPassport(travellerId: Int, request: Request)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)


