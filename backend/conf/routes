# Routes

# Home page
GET          /                                         controllers.Assets.at(path="/public/vue-front-end-goes-here", file="index.html")

#Interval routes
POST         /api/internal/resample                    controllers.InternalController.resample

# Auth routes
POST         /api/auth/travellers/signup               controllers.AuthController.signup(request: Request)
POST         /api/auth/travellers/login                controllers.AuthController.login(request: Request)
POST         /api/auth/travellers/logout               controllers.AuthController.logout(request: Request)
GET          /api/auth/travellers/:email/available     controllers.AuthController.checkEmailAvailable(email: String)

# Traveller routes
GET          /api/travellers                           controllers.TravellerController.getTravellers()
GET          /api/travellers/search                    controllers.TravellerController.searchTravellers(request: Request)
GET          /api/travellers/nationalities             controllers.TravellerController.getNationalities(request: Request)
GET          /api/travellers/passports                 controllers.TravellerController.getAllPassports(request: Request)
GET          /api/travellers/types                     controllers.TravellerController.getTravellerTypes(request: Request)
GET          /api/travellers/:travellerId              controllers.TravellerController.getTraveller(travellerId: Int, request: Request)
PATCH        /api/travellers                           controllers.TravellerController.updateTraveller(travellerId: Int = -1, request: Request)
PATCH        /api/travellers/:travellerId              controllers.TravellerController.updateTraveller(travellerId: Int, request: Request)

# Destination Routes
GET         /api/destinations                           controllers.DestinationController.getDestinations(request: Request)
GET         /api/destinations/countries                 controllers.DestinationController.getCountries()
GET         /api/destinations/countries/:countryId/districts  controllers.DestinationController.getDistricts(countryId: Int)
GET         /api/destinations/types                     controllers.DestinationController.getDestinationTypes()
GET         /api/destinations/:destinationId            controllers.DestinationController.getDestination(destinationId: Int, request: Request)
DELETE      /api/destinations/:destinationId            controllers.DestinationController.deleteDestination(destinationId: Int, request: Request)


POST        /api/destinations                           controllers.DestinationController.addDestination(request: Request)
PUT         /api/destinations/:destinationId            controllers.DestinationController.updateDestination(request: Request, destinationId: Int)

# Trip routes
GET         /api/travellers/:travellerId/trips      controllers.TripController.getTrips(request: Request, travellerId: Int)
POST        /api/travellers/:travellerId/trips              controllers.TripController.addTrip(travellerId: Int, request: Request)
DELETE      /api/travellers/:travellerId/trips/:tripId      controllers.TripController.deleteTrip(travellerId : Int, tripId : Int, request : Request)
GET         /api/travellers/:travellerId/trips/:tripId      controllers.TripController.getTrip(travellerId: Int, tripId: Int, request: Request)
PUT         /api/travellers/:travellerId/trips/:tripId      controllers.TripController.updateTrip(request: Request, travellerId : Int, tripId : Int)

# Map static resources from the /public folder to the /assets URL path
GET          /assets/*file                             controllers.Assets.at(path="/public", file)

GET          /*file                                    controllers.FrontendController.assetOrDefault(file)
